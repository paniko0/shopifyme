<table>
  <div class="ui cards">
    <% @products.each do |product| %>
      <div class="card">
        <%= form_tag("/discount", method: "POST") do %>
          <%= hidden_field_tag 'product_id', product.id %>
          <%= hidden_field_tag 'product_amount', product.price %>
          <div class="image">
            <img class="ui mini image" src="<%= product.img %>">
          </div>
          <div class="content">
            <div class="header">
              <%= product.title %>
            </div>
            <div class="ui left labeled content" tabindex="0">
              <div class="ui basic right pointing label">
                Customers interested
              </div>
              <div class="ui label">
                <%= product.interested %>
              </div>
            </div>
          </div>
          <%= button_tag "OFFER 10% OFF", class: "ui bottom attached teal button", data: { disable_with: "Processing" } %>
        <% end %>
      </div>
    <% end %>
  </div>
</table>
