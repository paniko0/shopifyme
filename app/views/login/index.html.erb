
<div class="ui three column centered grid">
  <div class="column">
    <%= form_tag("/auth/shopify", method: "get", class: "ui large form") do %>
      <div class="ui stacked segment" style="background: #00C9FF;background: -webkit-linear-gradient(to left, #00C9FF  , #8DC26F );background: linear-gradient(to left, #00C9FF  , #8DC26F );" >
        <%= image_tag "logo.png", style: "width: 100%" %>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag(:shop, "", placeholder: 'your-shop-url.myshopify.com', style: "background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat;") %>
          </div>
        </div>
        <%= submit_tag("Log In", class: "ui fluid large teal submit button") %>
      </div>

      <div class="ui error message"></div>

    <% end %>
  </div>
</div>
